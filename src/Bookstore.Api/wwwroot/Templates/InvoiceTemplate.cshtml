@model Bookstore.Application.DTO.InvoiceDto
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice</title>
</head>
<body>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var book in Model.Books) {
                <tr>
                    <td>@book.Name</td>
                    <td>@book.Quantity</td>
                    <td>@book.Price</td>
                    <td>@(book.Price*book.Quantity)</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3">Total:</td>
                <td>@Model.TotalCost</td>
            </tr>
            <tr>
                <td colspan="3">For:</td>
                <td>@Model.FullName</td>
            </tr>
        </tfoot>
    </table>
</body>
</html>